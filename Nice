<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JS Exercise 3</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .blue { color: blue; }
        .green { color: green; }
        .red { color: red; }
    </style>
</head>
<body>

    <h1>JS Exercise 3</h1>

    <label>Enter a Number:</label>
    <input type="number" id="numberInput">
    <button onclick="insertNumber()">Insert</button>
    <button onclick="deleteAll()">Delete All</button>

    <h3>Numbers:</h3>
    <div id="numberList"></div>

    <p>Sum: <span id="sum" class="blue">0</span></p>
    <p>Highest: <span id="highest" class="green">0</span></p>
    <p>Lowest: <span id="lowest" class="red">0</span></p>

    <script>
        let numbers = [];

        function insertNumber() {
            let input = document.getElementById("numberInput").value;
            let num = parseInt(input);

            if (!isNaN(num)) {
                numbers.push(num);
                updateDisplay();
            }
            document.getElementById("numberInput").value = "";
        }

        function deleteAll() {
            numbers = [];
            updateDisplay();
        }

        function updateDisplay() {
            let numberList = document.getElementById("numberList");
            numberList.innerHTML = numbers.join(", ");

            let sum = numbers.reduce((a, b) => a + b, 0);
            let highest = numbers.length > 0 ? Math.max(...numbers) : 0;
            let lowest = numbers.length > 0 ? Math.min(...numbers) : 0;

            document.getElementById("sum").innerText = sum;
            document.getElementById("highest").innerText = highest;
            document.getElementById("lowest").innerText = lowest;
        }
    </script>

</body>
</html>
